{"ast":null,"code":"import { jsx as _jsx } from \"react/jsx-runtime\";\n// import Image from 'next/Image'\nimport { wrap } from 'popmotion';\nimport { useState } from 'react';\nimport { motion, AnimatePresence } from 'framer-motion';\nconst images = [\"/img1.png\", \"/img2.png\", \"/img3.png\"];\nconst variants = {\n  enter: direction => {\n    return {\n      y: direction > 0 ? 1000 : -1000,\n      opacity: 0\n    };\n  },\n  center: {\n    zIndex: 1,\n    y: 0,\n    opacity: 1\n  },\n  exit: direction => {\n    return {\n      zIndex: 0,\n      y: direction < 0 ? 1000 : -1000,\n      opacity: 0\n    };\n  }\n};\nconst swipeConfidenceThreshold = 10000;\n\nconst swipePower = (offset, velocity) => {\n  return Math.abs(offset) * velocity;\n};\n\nexport default function ImageDisplayer({\n  dataToDisplay\n}) {\n  const {\n    0: [page, direction],\n    1: setPage\n  } = useState([0, 0]);\n  const imageIndex = wrap(0, images.length, page);\n\n  const paginate = newDirection => {\n    setPage([page + newDirection, newDirection]);\n  };\n\n  return /*#__PURE__*/_jsx(AnimatePresence, {\n    initial: false,\n    custom: direction,\n    children: /*#__PURE__*/_jsx(\"div\", {\n      className: \"w-full flex flex-col justify-start items-start  m-10 p-6 overflow-hidden\",\n      children: /*#__PURE__*/_jsx(motion.div, {\n        className: \"relative w-full p-2 \",\n        children: /*#__PURE__*/_jsx(motion.img, {\n          src: images[imageIndex],\n          custom: direction,\n          variants: variants,\n          initial: \"enter\",\n          animate: \"center\",\n          exit: \"exit\",\n          transition: {\n            y: {\n              type: \"spring\",\n              stiffness: 300,\n              damping: 30\n            },\n            opacity: {\n              duration: 0.2\n            }\n          },\n          drag: \"y\",\n          dragConstraints: {\n            top: 0,\n            bottom: 0\n          },\n          dragElastic: 1,\n          onDra